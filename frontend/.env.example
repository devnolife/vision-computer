# Database
DATABASE_URL="postgresql://user:password@localhost:5432/rumahplagiasi?schema=public"

# Next.js Application
NEXT_PUBLIC_API_URL="http://localhost:3000"  # Public API URL for client-side requests

# NextAuth
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Python API (Server-side)
PYTHON_API_URL="http://localhost:8000"  # For server-side API routes
PYTHON_API_KEY="your-api-key-here"  # Generate with: python ../generate_api_key.py
PYTHON_API_TIMEOUT="300000"

# Python API (Client-side) - Must have NEXT_PUBLIC_ prefix
NEXT_PUBLIC_PYTHON_API_URL="http://localhost:8000"  # For client-side direct calls
NEXT_PUBLIC_PYTHON_API_KEY="your-api-key-here"  # Same API key for client-side calls

# Upload Configuration
MAX_FILE_SIZE="10485760"  # 10MB in bytes
UPLOAD_DIR="./uploads"
OUTPUT_DIR="./outputs"

# Feature Flags
ENABLE_OCR="true"
ENABLE_ANALYTICS="true"
ENABLE_EMAIL_NOTIFICATIONS="false"
